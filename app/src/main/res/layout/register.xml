<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="帳號："
            android:id="@+id/textView4"
            android:textSize="25dp"
            android:height="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/RGaccount"
            android:layout_weight="0.52"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="密碼："
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/RGpassword"
            android:layout_weight="1"
            android:layout_marginRight="60dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="性別："
            android:id="@+id/textView11"
            android:textSize="25dp"
            android:height="20dp" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/RGsex"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:id="@+id/RGsexMan"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:id="@+id/RGsexWoman"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:id="@+id/RGsexOther"
                android:checked="false" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:height="20dp"
            android:text="生日："
            android:textSize="25dp" />

        <CalendarView
            android:id="@+id/RGcalendar"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:height="20dp"
            android:text="姓名："
            android:textSize="25dp" />

        <EditText
            android:id="@+id/RGname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="電話："
            android:id="@+id/textView9"
            android:textSize="25dp"
            android:height="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/RGphone"
            android:layout_weight="0.52"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView110"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:height="20dp"
            android:text="地址："
            android:textSize="25dp" />

        <EditText
            android:id="@+id/RGaddress"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.52" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:height="20dp"
            android:text="E-mail："
            android:layout_marginLeft="20dp"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/RGemail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.52" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/RGcancelBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="cancel"
            android:text="取消" />

        <Button
            android:id="@+id/RGcommitBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:onClick="register"
            android:text="送出" />
    </LinearLayout>
</LinearLayout>