<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/mid"
        android:text="編號"
        android:layout_height="fill_parent" android:layout_width="wrap_content"
        android:textSize="14sp" android:width="30dip"/>
    <TextView android:id="@+id/mname"
        android:text="姓名"
        android:layout_height="fill_parent" android:layout_width="wrap_content"
        android:textSize="14sp" android:width="50dip"/>
    <TextView android:id="@+id/mtime"
        android:text="文章時間"
        android:layout_height="fill_parent" android:layout_width="wrap_content"
        android:textSize="14sp" android:width="90dip"/>
    <TextView android:id="@+id/mtitle"
        android:text="文章列表"
        android:layout_height="fill_parent" android:layout_width="wrap_content"
        android:textSize="14sp" android:width="100dip"/>

</LinearLayout>