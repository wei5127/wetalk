<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp"
        android:layout_marginBottom="205dp"
        android:text="Welcome To Our Project"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="註冊"
        android:id="@+id/IDXregisterBtn"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"

        android:onClick="register" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登入"
        android:id="@+id/IDXloginbtn"
        android:onClick="login"
        android:layout_alignBaseline="@+id/IDXregisterBtn"
        android:layout_alignBottom="@+id/IDXregisterBtn"
        android:layout_alignRight="@+id/IDXimageButton"
        android:layout_alignEnd="@+id/IDXimageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IDXimageButton"
        android:src="@drawable/img02"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="chooseTheme" />

</LinearLayout>